{
  "name": "@better-builds/lets-version",
  "version": "0.1.0",
  "description": "A package that reads your conventional commits and git history and recommends (or applies) a SemVer version bump for you",
  "main": "dist/index.js",
  "scripts": {
    "build": "run-s clean typecheck build:bundle",
    "build:bundle": "tsup -d ./dist --target es2022 --format esm ./src/lets-version.mjs",
    "build:types": "tsc --project ./tsconfig.json",
    "clean": "rm -rf ./dist",
    "lint": "eslint --no-error-on-unmatched-pattern './src/**/*.{tsx,ts,jsx,js,mjs}'",
    "lint:fix": "npm run lint -- --fix",
    "start": "node src/cli.mjs",
    "postinstall": "husky install",
    "typecheck": "tsc --noEmit --allowJs --skipLibCheck"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benduran/lets-version.git"
  },
  "keywords": [
    "Version",
    "Bump",
    "SemVer",
    "Conventional",
    "Commits",
    "Not-Lerna"
  ],
  "author": "Benjamin Duran <stratodyne@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benduran/lets-version/issues"
  },
  "homepage": "https://github.com/benduran/lets-version#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@npmcli/map-workspaces": "^3.0.4",
    "@types/conventional-commits-parser": "^3.0.3",
    "@types/fs-extra": "^11.0.1",
    "@types/prompts": "^2.4.4",
    "@types/semver": "^7.5.0",
    "@types/semver-utils": "^1.1.1",
    "@types/yargs": "^17.0.24",
    "eslint-config-react-yas": "^4.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "tsup": "^6.7.0",
    "type-fest": "^3.11.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "app-root-path": "^3.1.0",
    "conventional-commits-parser": "^3.2.4",
    "detect-package-manager": "^2.0.1",
    "execa": "^7.1.1",
    "fs-extra": "^11.1.1",
    "prompts": "^2.4.2",
    "semver": "^7.5.1",
    "semver-utils": "^1.1.4",
    "yaml": "^2.3.1",
    "yargs": "^17.7.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,mts}": [
      "eslint",
      "npm run typecheck --"
    ]
  }
}
